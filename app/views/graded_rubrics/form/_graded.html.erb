<% unless can_not_be_regrade_criteriums.size.zero? %>
  <h4><%= t('assignment.submission_grade.label.previous_graded_criteria') %></h4>
  <table class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th><%= t('assignment.submission_grade.label.weight') %></th>
      <th style="width: 30%;"><%= t('assignment.submission_grade.label.meet_the_specification') %></th>
      <th><%= t('assignment.submission_grade.label.point') %></th>
      <th style="width: 20%;"><%= t('assignment.submission_grade.label.comment') %></th>
      <th><%= t('assignment.submission_grade.label.mandatory') %></th>
    </tr>
    </thead>
    <tbody>
    <% can_not_be_regrade_criteriums.each do |criteria| %>
      <tr>
        <th><%= criteria.index %></th>
        <td><span><%= criteria.weight %></span></td>
        <td><span><%= criteria.meet_the_specification %></span></td>
        <td>
          <% if criteria.criteria_type == Constants::CRITERIA_TYPE_PASS_FAIL %>
            <span><%= criteria.status %></span>
          <% else %>
            <span><%= criteria.point %></span>
          <% end %>
        </td>
        <td><span><%= criteria.comment %></span></td>
        <td>
          <span><%= criteria.mandatory ? t('assignment.submission_grade.label.mandatory_yes') : t('assignment.submission_grade.label.mandatory_no') %></span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>