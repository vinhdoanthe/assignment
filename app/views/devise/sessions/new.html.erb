<div class="jumbotron" style="margin-top: 10%">
  <h2 class="lead"><%= t('welcome_message') %></h2>
  <hr class="my-4">
  <p><%= t('welcome_login') %></p>
  <%- if devise_mapping.omniauthable? %>
    <a href='<%= user_google_oauth2_omniauth_authorize_path %>' >
        <button class="btn btn-primary btn-lg"><%= t('devise.sessions.login_btn_google') %></button>
    </a>
    <a href='<%= user_azureactivedirectory_omniauth_authorize_path %>' >
        <button class="btn btn-primary btn-lg"><%= t('devise.sessions.login_btn_office365') %></button>
    </a>
  <% end %>
</div>
