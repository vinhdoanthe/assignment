<h2>List of assignments of <%= @course_instance.code %></h2>
<div class="container">
  <table class="table table-stripped table-hover">
    <thead>
    <tr>
      <th>Assignment name</th>
      <th>Status</th>
    </tr>
    </thead>
    <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.name %></td>
        <td><%= assignment.status_of_learner(current_user.id) %></td>
        <% if student_can_submit?(assignment.id, current_user.id) %>
          <td><%= link_to 'Submit solution', new_submission_grade_path(:assignment => assignment) %></td>
        <% else %>
          <td>You submitted solution for this assignment</td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>