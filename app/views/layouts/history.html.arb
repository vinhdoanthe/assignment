panel "History" do
    table_for assigns[:versions] do
        column ("Item") do |v|
            if v.item
                link_to v.item.id, [:admin, v.item]
            end
        end
        column ("Type") { |v| v.item_type.underscore.humanize }
        column ("Event") {|v| v.event}
        column ("Object Changes") {|v| v.object_changes}
        column ("Modified at") { |v| v.created_at.to_s :long }
        column ("User") { |v| link_to User.find(v.whodunnit).email, [:admin, User.find(v.whodunnit)] }
    end
end