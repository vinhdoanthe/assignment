<% sg_decorated = SubmissionGradeDecorator.new(submission) %>
<div>
  <div class='form-group row'>
    <label class="col-sm-2 col-form-label"><%= t('assignment.active.assignment') %></label>
    <div class="col-sm-10">
      <p class="mg-auto"><%= submission.assignment.name %></p>
    </div>
  </div>
  <div class='form-group row'>
    <label class="col-sm-2 col-form-label"><%= t('assignment.active.course') %></label>
    <div class="col-sm-10">
      <p class="mg-auto"><%= submission.assignment.course_instance.code %></p>
    </div>
  </div>
  <div class='form-group row'>
    <label class="col-sm-2 col-form-label"><%= t('assignment.active.learner') %></label>
    <div class="col-sm-10">
      <p class="mg-auto"><%= submission.student.email %></p>
    </div>
  </div>
  <div class='form-group row'>
    <label class="col-sm-2 col-form-label"><%= t('assignment.active.status') %></label>
    <div class="col-sm-10">
      <p class="mg-auto"><%= render :partial => 'submission_grades/shared/status', :locals => {status: submission.status, full_width: false} %></p>
    </div>
  </div>
  <div class='form-group row'>
    <label class="col-sm-2 col-form-label">
      <%= t('assignment.active.solution') %></label>
    <div class="col-sm-10">
      <p class="mg-auto">
      <%= render :partial => 'submission_grades/shared/submission_file', :locals => {submission: submission} %>
      </p>
    </div>
  </div>
  <div class='form-group row'>
    <label class="col-sm-2 col-form-label"><%= t('assignment.active.attempt') %></label>
    <div class="col-sm-10"><p class="mg-auto"><%= submission.attempt %></p></div>
  </div>
  <div class='form-group row'>
    <label class="col-sm-2 col-form-label"><%= t('assignment.active.mentor') %></label>
    <div class="col-sm-10">
      <p class="mg-auto">
      <%= submission.mentor&.email %>
      </p>
    </div>
  </div>
  <div class='form-group row'>
    <label class="col-sm-2 col-form-label"><%= t('assignment.active.point') %>:</label>
    <div class="col-sm-10">
      <p class="mg-auto"><%= sg_decorated.point_frm %></p>
    </div>
  </div>
</div>
