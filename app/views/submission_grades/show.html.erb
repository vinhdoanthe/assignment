<p id="notice"><%= notice %></p>

<p>
  <strong>Assignment:</strong>
  <%= @submission_grade.assignment.name %>
</p>

<p>
  <strong>Student:</strong>
  <%= @submission_grade.student.email %>
</p>

<p>
  <strong>Submission status:</strong>
  <%= @submission_grade.submission_status %>
</p>

<p>
  <strong>Submission file:</strong>
  <% if @submission_grade.submission_file.attached? %>
    <%= link_to "Submission File", rails_blob_path(@submission_grade.submission_file, disposition: "attachment") %>
  <% else %>
  <% end %>
</p>

<p>
  <strong>Attempt count:</strong>
  <%= @submission_grade.attempt_count %>
</p>

<p>
  <strong>Latest:</strong>
  <%= @submission_grade.latest %>
</p>

<p>
  <strong>Mentor:</strong>
  <% if @submission_grade.mentor.nil? %>
  <% else %>
    <%= @submission_grade.mentor.email %>
  <% end %>
</p>

<!--<p>-->
<!--  <strong>Grade status:</strong>-->
  <%#= @submission_grade.grade_status %>
<!--</p>-->

<p>
  <strong>Graded rubric:</strong>
  <%= @submission_grade.graded_rubric %>
</p>

<p>
  <strong>Graded file:</strong>
  <% if @submission_grade.graded_file.attached? %>
    <%= link_to "Graded File", rails_blob_path(@submission_grade.graded_file, disposition: "attachment") %>
  <% else %>
  <% end %>
</p>

<p>
  <strong>Point:</strong>
  <%= @submission_grade.point %>
</p>

<%= link_to 'Edit', edit_submission_grade_path(@submission_grade) %> |
<%= link_to 'Back', submission_grades_path %>