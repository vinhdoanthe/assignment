    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%#= form.text_field :status %>
    <%= form.collection_select(:status, Course.course_status, :first, :last, {:prompt => 'Select Course Status', :selected => @course.status}, {class: 'form-control'}) %>
